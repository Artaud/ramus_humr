<%= simple_form_for(@prihlaska) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :jmeno_prijmeni %>
    <%= f.input :kontakt %>
    <%= f.association :role_ucastnika %>
    <%= f.input :vzkaz %>
    <%= f.association :akce %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
