<br>
<%= form_for @cart, :html => { :class => 'form-horizontal form-model' } do |f| %>
<div class="form-group">
	<%= f.label :jmeno, :class => 'control-label col-md-2' %>
	<div class="col-md-8">
		<%= f.text_field :jmeno, :class => 'text-field form-control' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :prijmeni, :class => 'control-label col-md-2' %>
	<div class="col-md-8">
		<%= f.text_field :prijmeni, :class => 'text-field form-control' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :email, :class => 'control-label col-md-2' %>
	<div class="col-md-8">
		<%= f.text_field :email, :class => 'text-field form-control' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :telefon, :class => 'control-label col-md-2' %>
	<div class="col-md-8">
		<%= f.text_field :telefon, :class => 'text-field form-control' %>
	</div>
</div>
<div class="form-group">
	<%= f.label :vzkaz, :class => 'control-label col-md-2' %>
	<div class="col-md-8">
		<%= f.text_field :vzkaz, :class => 'text-field form-control' %>
	</div>
</div>
<div class="form-group">
	<div class="col-md-8">
	<%= f.hidden_field :potvrzeno, :class => 'text-field form-control', value: true %>
	</div>
</div>
<div class="form-group">
	<div class='col-md-offset-2 col-md-10'>
		<%= f.submit nil, :class => 'btn btn-primary' %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
		<%#= link_to t('.cancel', :default => t("helpers.links.cancel")),
		carts_path, :class => 'btn btn-default' %>
	</div>
</div>
<% end %>
